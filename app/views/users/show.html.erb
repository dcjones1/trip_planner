<div class="row">
  <div class="col-md-9 col-md-push-3" style="margin-top:20px; margin-left:10px"><h3><strong>Name:</strong> <%= @user.name %></h3></div>
  <div class="col-md-9 col-md-push-3" style="margin-bottom:20px; margin-left:10px"><h3><strong>E-mail:</strong> <%= @user.email %></h3></div>
</div>
<div class="btn-toolbar">
  <%= button_to "View Trips", trips_path, method: :get, class: "btn btn-outline-info", style:"margin-left:10px"%>
  <%= button_to "Edit Profile", edit_user_path(@user), method: :get, data: {confirm: "Are you sure you want to edit your account?"}, class: "btn btn-outline-warning", style:"margin-left:10px"%>
  <%= button_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure you want to delete your account? This will delete all associated trips from TripPlanner."}, class:"btn btn-outline-danger", style:"margin-left:10px" %>
</div>
