<h2>Name: <%= @user.name %></h2>
<h2>E-mail: <%= @user.email %></h2>
<%= button_to "View Trips", trips_path(@user), method: :get %>

<%= button_to "Edit Profile", edit_user_path(@user), method: :get, data: {confirm: "Are you sure you want to edit your account?"}  %>
<%= button_to "Delete Account", @user, method: :delete, data: {confirm: "Are you sure you want to delete your account? This will delete all associated trips from TripPlanner."} %>
