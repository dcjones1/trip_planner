<%= bootstrap_form_for(new_object, url: new_flight_path, method: :get, layout: :inline) do |f| %>
  <%= f.select :origin, new_object.codes, hide_label: true, class: "selectpicker", style:"margin-right:10px", prompt:"Select the departing airport:"%>
  <%= f.text_field :destination, hide_label: true, placeholder: "Destination", style:"margin-right:10px"%>
  <%= f.text_field :departure_date, hide_label: true, placeholder: "Departure Date", style:"margin-right:10px"%>
<%= f.text_field :return_date, hide_label: true, placeholder: "Return Date (optional)", style:"margin-right:10px"%>
 <%= f.select :travel_class,  [["All", ""],["Economy", "ECONOMY"],["Premium Economy", "PREMIUM_ECONOMY"],["Business", "BUSINESS"],["First", "FIRST"]], hide_label: true, class: "selectpicker", style:"margin-right:10px", prompt: "Select Travel Class" %>
  <%= f.check_box :nonstop, label: "Nonstop", style:"margin-left:20px"%>
  <%= f.submit "Submit", class: "btn btn-outline-success", style:"margin-left:10px" %>
<% end %>
