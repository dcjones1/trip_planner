<%= bootstrap_form_for(new_object, url: new_flight_path, method: :get, layout: :inline) do |f| %>
  <%= f.text_field :origin, hide_label: true, placeholder: "Origin", style:"margin-right:10px"%>
  <%= f.text_field :destination, hide_label: true, placeholder: "Destination", style:"margin-right:10px"%>
  <%= f.text_field :departure_date, hide_label: true, placeholder: "Departure Date", style:"margin-right:10px"%>
  <%= f.select :travel_class,  [["All", ""],["Economy", "ECONOMY"],["Premium Economy", "PREMIUM_ECONOMY"],["Business", "BUSINESS"],["First", "FIRST"]], label: "Travel Class:", class: "selectpicker", style:"margin-right:10px", prompt:true %>
  <%= f.check_box :nonstop, label: "Nonstop", style:"margin-left:20px"%>
  <%= f.submit "Submit", class: "btn btn-outline-success", style:"margin-left:10px" %>
<% end %>

