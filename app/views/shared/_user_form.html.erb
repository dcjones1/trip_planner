<%= bootstrap_form_for(new_object, layout: :horizontal, label_col: "col-sm-1") do |f| %>
<%= f.text_field :first_name,  label: "First Name:", control_col: "col-sm-2"%>
<%= f.text_field :last_name ,  label: "Last Name:", control_col: "col-sm-2"%>
<%= f.email_field :email , label: "E-mail:", control_col: "col-sm-3"%>
<%= f.submit "Submit", class: "btn btn-outline-success", style:"margin-left:10px" %>
<% end %>
